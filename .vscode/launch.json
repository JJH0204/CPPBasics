        {
            "name": "C++ Launch (macOS)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Clang 15.0.0 arm64-apple-darwin23.4.0/project_Basics/Cpp_example1",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
