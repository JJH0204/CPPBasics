{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\GCC 8.1.0 x86_64-w64-mingw32\\project_Basics\\Cpp_example1.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
