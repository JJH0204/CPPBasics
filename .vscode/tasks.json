{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "windows": {
                "command": "cmake",
                "args": [
                    "-S",
                    "${workspaceFolder}",
                    "-B",
                    "${workspaceFolder}/build/GCC 8.1.0 x86_64-w64-mingw32",
                    "-G",
                    "Ninja"
                ]
            },
            "osx": {
                "command": "cmake",
                "args": [
                    "-S",
                    "${workspaceFolder}",
                    "-B",
                    "${workspaceFolder}/build/Clang 15.0.0 arm64-apple-darwin23.4.0",
                    "-G",
                    "Ninja"
                ]
            },
            "group": "build",
            "problemMatcher": [],
            "detail": "Configure the project with CMake"
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "windows": {
                "command": "cmake",
                "args": [
                    "--build",
                    "${workspaceFolder}\\build\\GCC 8.1.0 x86_64-w64-mingw32"
                ]
            },
            "osx": {
                "command": "cmake",
                "args": [
                    "--build",
                    "${workspaceFolder}/build/Clang 15.0.0 arm64-apple-darwin23.4.0"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": "CMake Configure",
            "detail": "Build the project with CMake"
        }
        ,
        {
            "label": "build PDCurses application",
            "type": "shell",
            "command": "cl",
            "args": [
                "/EHsc",
                "/Zi",
                "/Fe:",
                "${workspaceFolder}\\main.exe",
                "${workspaceFolder}\\main.cpp",
                "/I",
                "C:\\path_to\\PDCurses",
                "/link",
                "pdcurses.lib"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"],
            "detail": "Compiler: cl"
        }
    ]
}